@model ViveirosID.Models.ProdutoDetalhesViewModel

@{
    ViewBag.Title = "Detalhes";
    //Variavel auxiliar para determinar a directoria do ficheiro
    var fonte_imagem = Model.Imagens.FirstOrDefault().directorio;
    //var compare = fonte_imagem.Compare();
}

@using (Html.BeginForm("Adiciona","Artigos", new { id = Model.Artigo.ArtigoID } , FormMethod.Post))
{
    @Html.AntiForgeryToken()
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">@Model.Categoria.tipo</p>
            <div class="list-group">
                @foreach (var item in Model.Artigos)
                {
                    if (item.ArtigoID == Model.Artigo.ArtigoID)
                    {
                        <a href="/Artigos/Details/@item.ArtigoID" class="list-group-item active">@item.nome</a>
                    }
                    else
                    {
                        <a href="/Artigos/Details/@item.ArtigoID" class="list-group-item">@item.nome</a>
                    }
                }
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="@fonte_imagem" alt="">
                <div class="caption-full">
                    <h4 class="pull-right">@Model.Artigo.preco $</h4>
                    <h4>
                         @Model.Artigo.nome
                    </h4>
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.Artigo.nometecnico)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Artigo.nometecnico)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Artigo.disponibilidade)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Artigo.disponibilidade)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Artigo.descricao)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Artigo.descricao)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Artigo.plantacaoComeca)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Artigo.plantacaoComeca)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Artigo.plantacaoAcaba)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Artigo.plantacaoAcaba)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Artigo.peso)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Artigo.peso)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Artigo.crescimento)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Artigo.crescimento)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Artigo.luz)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Artigo.luz)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Artigo.rega)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Artigo.rega)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Artigo.preco)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Artigo.preco) $
                        </dd>

                    </dl>

                    <button type="submit" class="btn btn-primary">Adicionar</button>

                    @*<input type="hidden" class="form-control" id="id" value="@Model.Artigo.ArtigoID">*@
                
                    <input type="text" class="form-control" id="id2" name="id2" value="1">
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /.container -->
}


<p>
    @if (User.IsInRole("Administrador"))
    {
        @Html.ActionLink("Editar", "Edit", new { id = Model.Artigo.ArtigoID })
        @Html.ActionLink("Voltar a Lista de Artigos", "Index")
    }
    else
    {
        @Html.ActionLink("Voltar a Lista de Artigos", "Index")
    }
    
</p>


