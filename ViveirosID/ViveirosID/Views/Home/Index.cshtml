@using Microsoft.AspNet.Identity
@model IEnumerable<ViveirosID.Models.Artigos>

@{
    ViewBag.Title = "Viveiros Zêzere";
}
    <!-- Jumbotron Header -->
    <header class="jumbotron hero-spacer">
        <h1>Viveiros Zêzere</h1>
        <p>A Viveiros Zêzere apresenta agora este site para se representar a si mesma na internet. Divulgar os seus produtos e cativar novos clientes.</p>
        <p>
            <a class="btn btn-primary btn-large" href="~/Home/About">Ver Notícia!</a>
        </p>
    </header>
    <hr>
    <!-- Title -->
    <div class="row">
        <div class="col-lg-12">
            <h3>Latest Features</h3>
        </div>
    </div>
    <!-- /.row -->
<!-- /.row -->

@foreach (var item in Model)
{
    var nome = "/Images/" + item.nome + "_1.jpeg";

        <div class="col-md-3 col-sm-6 hero-feature">
            <div class="thumbnail">
                <img src="@nome" alt="@item.nome">
                <div class="caption">
                    <h3>@Html.DisplayFor(modelItem => item.nome)</h3>
                    <p>@Html.DisplayFor(modelItem => item.descricao)</p>
                    <p>
                        @if (Request.IsAuthenticated)
                        {
                            @*@Html.ActionLink("Adiciona", "Adiciona", FormMethod.Post, new { id = item.ArtigoID , @class = "btn btn-primary" })*@
                            <a href="/Artigos/Adiciona/@item.ArtigoID/1" class="btn btn-primary">Adicionar</a>
                            <a href="/Artigos/Details/@item.ArtigoID/" class="btn btn-primary">Detalhes</a>
                            @*@Html.ActionLink("Detalhes", "Details", new { id = item.ArtigoID, @class = "btn btn-primary"})*@
                            @*<a href="" class="btn btn-primary">Adicionar!</a> <a href="@href_det" class="btn btn-default">Detalhes</a>*@ 
                        }
                        else
                        {
                            @Html.ActionLink("Adiciona","Login", new { @class = "btn btn-primary" })
                            @Html.ActionLink("Detalhes", "Login", new { @class = "btn btn-primary" })
                        }
                    </p>
                </div>
            </div>
        </div>
}


    